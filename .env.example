# BFF Environment Configuration

# Application
ENVIRONMENT=development
DEBUG=true
APP_NAME=BFF Service

# Server
HOST=0.0.0.0
PORT=8000

# Backend Services (update with your service URLs)
AUTH_SERVICE_URL=http://localhost:5001
APP_SERVICE_URL=http://localhost:5000
AUTH_API_PREFIX=/api
APP_API_PREFIX=/api

# Kubernetes service URLs example:
# AUTH_SERVICE_URL=http://auth-service.namespace.svc.cluster.local:5001
# APP_SERVICE_URL=http://app-service.namespace.svc.cluster.local:80

# CORS (update with your frontend domains)
CORS_ORIGINS=["http://localhost:8080","http://localhost:3000"]

# JWT
JWT_SECRET=your-development-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true
CACHE_TTL_SECONDS=300

# Security
SECURE_COOKIES=false
COOKIE_DOMAIN=localhost

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Timeouts
REQUEST_TIMEOUT=30.0
CONNECT_TIMEOUT=10.0
HTTP_VERIFY_TLS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
